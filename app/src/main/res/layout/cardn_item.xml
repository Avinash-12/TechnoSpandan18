<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/about"
                android:layout_marginTop="1dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_image"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"></TextView>


            <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/about"
                android:layout_margin="6dp"
                android:text="Date:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/dates"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/organiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_margin="6dp"
                android:text="Organisers:"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_margin="6dp"
                android:layout_toRightOf="@id/organiser"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/venues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/organizer"
                android:layout_margin="6dp"
                android:text="Venue:"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/organizer"
                android:layout_margin="6dp"
                android:layout_toRightOf="@id/venues"
                android:textSize="18dp">

            </TextView>
            <TextView
                android:id="@+id/entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venues"
                android:layout_margin="6dp"
                android:text="Entry Fee:"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/entryfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venues"
                android:layout_margin="6dp"
                android:layout_toRightOf="@id/entry"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry"
                android:layout_margin="6dp"
                android:text="Rules:"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry"
                android:layout_margin="6dp"
                android:layout_toRightOf="@id/rule"
                android:textSize="18dp">

            </TextView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>